# English AI Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ====================
# LLM API Configuration
# ====================

# DeepSeek Configuration
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
VITE_DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
VITE_DEEPSEEK_MODEL=deepseek-chat

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_BASE_URL=https://api.openai.com/v1
VITE_OPENAI_MODEL=gpt-4

# Anthropic Configuration
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
VITE_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Moonshot Configuration
VITE_MOONSHOT_API_KEY=your_moonshot_api_key_here
VITE_MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
VITE_MOONSHOT_MODEL=moonshot-v1-8k

# Ollama Configuration (Local)
VITE_OLLAMA_BASE_URL=http://localhost:11434/api
VITE_OLLAMA_MODEL=llama2

# ====================
# Application Settings
# ====================

# Default LLM Provider (deepseek | openai | anthropic | moonshot | ollama)
VITE_DEFAULT_LLM_PROVIDER=deepseek

# Default Grade Level (3-9)
VITE_DEFAULT_GRADE_LEVEL=5

# Debug Mode (true | false)
VITE_DEBUG_MODE=false

# ====================
# Feature Flags
# ====================

# Enable voice input (true | false)
VITE_ENABLE_VOICE_INPUT=true

# Enable PDF export (true | false)
VITE_ENABLE_PDF_EXPORT=true

# Enable offline mode (true | false)
VITE_OFFLINE_MODE=false

# ====================
# Platform-Specific
# ====================

# Capacitor App ID (for Android build)
CAPACITOR_APP_ID=com.eaa.vocabularyagent

# Capacitor App Name
CAPACITOR_APP_NAME=English AI Agent

# ====================
# Development Settings
# ====================

# Development server port
VITE_PORT=5173

# Enable hot module replacement
VITE_HMR=true

# ====================
# Notes
# ====================
# 1. Never commit .env file to version control
# 2. All VITE_* variables are exposed to client-side code
# 3. Store sensitive API keys securely
# 4. For production, use environment-specific configs
