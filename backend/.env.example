# Server
# If 4000 is in use, the app will try 4001-4005 automatically.
PORT=4000
NODE_ENV=development
# Optional: write bound port to this file for automation scripts.
# PORT_FILE=./data/backend-port.txt

# Auth
JWT_SECRET=change_me_jwt_secret
AUTH_SHARED_SECRET=change_me_shared_secret
TOKEN_TTL_SECONDS=900

# Security
CORS_ORIGINS=http://localhost:5173
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=60
BODY_SIZE_LIMIT=1mb
REQUEST_TIMEOUT_MS=10000
LLM_CONFIG_STORE_PATH=./data/device-llm-config.json

# OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_VERSION=2023-06-01

# Moonshot
MOONSHOT_API_KEY=
MOONSHOT_BASE_URL=https://api.moonshot.cn
MOONSHOT_MODEL=moonshot-v1-8k

# Ollama (local only)
ALLOW_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Groq (Whisper speech recognition)
GROQ_API_KEY=
